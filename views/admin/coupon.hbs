<main class="main-wrap">

    <section class="content-main">
        <div class="content-header">
            <h2 class="content-title">Coupons list</h2>
            <div>
                <a href="/admin/add_coupon" class="btn btn-primary"><i class="material-icons md-plus"></i> Create coupon</a>
            </div>
        </div>
        <div class="card mb-4">
            
            <div class="card-body ">
                <div class="table-responsive ">
                    <table class="table table-hover ">
                        <thead>
                            <tr>
                                <th class="text-center">Coupon Code</th>
                                <th class="text-center">Discount Percentage</th>
                                <th class="text-center">Min Purchase</th>
                                <th class="text-center">Max Discount</th>
                                <th class="text-center">Expiry Date</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        {{#each couponData}}
                        <tbody>
                            <tr>
                                <td width="15%" class="text-center">
                                    <div class="info pl-3">
                                        <h6 class="mb-0 title">{{this._doc.code}}</h6>
                                    </div>
                                </td>
                                <td class="text-center" width="15%">{{this._doc.discount}}%</td>
                                <td class="text-center" width="15%">{{this._doc.minPurchase}}</td>
                                <td class="text-center" width="15%">{{this._doc.maxDiscount}}</td>
                                <td class="text-center" width="20%">{{this.expiryDate}}</td>
                                <td class="text-center" width="20%">
                                    <a data-coupon-id="{{this._doc._id}}" type="button" class="btn btn-primary" id="deletecoupon"> 
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                        {{/each}}
                    </table>
                </div>
            </div>
        </div>
        <div class="pagination-area mt-15 mb-50">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-start">
                    {{#each pages}}
                        <li class="page-item {{#ifEquals this ../currentPage}}active{{/ifEquals}}"><a class="page-link" href="?page={{this}}">{{this}}</a></li>
                    {{/each}}
                </ul>
            </nav>
        </div>
    </section>
   
</main>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
    ////////////coupon product
    $(document).ready(function () {
        $(document).on('click', '#deletecoupon', function (e) {
            e.preventDefault();
            var id = $(this).data('coupon-id');
            //var wishId = $(this).data('whishlist-id'); // Corrected variable name to wishId

            // Store reference to $(this) in a variable for use inside AJAX success and error callbacks
            var $this = $(this);

            Swal.fire({
                title: "Are you sure want to delete this coupon?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#088178",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: 'POST',
                        url: '/admin//delete_cpn',
                        contentType: 'application/json',
                        data: JSON.stringify({ id: id }),
                        success: function (couponData) {
                            console.log("Product removed from Cart successfully");
                            // If you want to remove the row from the table upon successful removal
                            $this.closest('tr').remove(); // Use $this instead of $(this)
                            // swal("Removed from wishlist", "The product has been removed from your wishlist.", "success");
                            {
                                Swal.fire({
                                    title: 'Removed!',
                                    text: 'coupon Succesfully Removed !!!',
                                    icon: 'success',
                                    confirmButtonText: 'Cool'
                                })
                            }


                        },
                        error: function (xhr, status, error) {
                            console.error("Error removing coupon :", error);
                            swal("Error", "Something went wrong. Please try again later.", "error");
                        }
                    });
                    Swal.fire({
                        title: "Deleted!",
                        //text: "Your file has been deleted.",
                        icon: "success"
                    }).then(()=> window.location.reload());
                }
            });


        });
    });
</script>