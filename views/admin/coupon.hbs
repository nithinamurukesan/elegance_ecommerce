            <div class="card-body ">
                <div class="table-responsive ">
                    <table class="table table-hover ">
                        <thead>
                            <tr>
                                <th class="text-center">Coupon Code</th>
                                <th class="text-center">Discount Percentage</th>
                                <th class="text-center">Min Purchase</th>
                                <th class="text-center">Max Discount</th>
                                <th class="text-center">Expiry Date</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        {{#each couponData}}
                        <tbody>
                            <tr>
                                <td width="15%" class="text-center">
                                    <div class="info pl-3">
                                        <h6 class="mb-0 title">{{this._doc.code}}</h6>
                                    </div>
                                </td>
                                <td class="text-center" width="15%">{{this._doc.discount}}%</td>
                                <td class="text-center" width="15%">{{this._doc.minPurchase}}</td>
                                <td class="text-center" width="15%">{{this._doc.maxDiscount}}</td>
                                <td class="text-center" width="20%">{{this.expiryDate}}</td>
                                <td class="text-center" width="20%">
                                    <a data-coupon-id="{{this._doc._id}}" type="button" class="btn btn-primary" id="deletecoupon"> 
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                        {{/each}}
                    </table>
                </div>
            </div>
        </div>
        <div class="pagination-area mt-15 mb-50">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-start">
                    {{#each pages}}
                        <li class="page-item active"><a class="page-link" href="?page={{this}}">{{this}}</a></li>
                    {{/each}}
                </ul>
            </nav>
        </div>
